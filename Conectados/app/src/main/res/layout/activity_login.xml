<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONECTADOS"
        android:textSize="36dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/activity_login_et_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:hint="Insira seu Email"
        android:inputType="textEmailAddress"
        android:textSize="18dp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/activity_login_et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Insira sua Senha"
        android:textColor="#000"
        android:textSize="18dp"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/activity_login_tv_criar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar conta"
            android:textColor="#0022FF"
            android:textSize="18dp"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/activity_login_tv_esqueceu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceu sua senha?"
            android:textColor="#0022FF"
            android:textSize="18dp"
            android:layout_margin="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/activity_login_bt_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#fff"
        android:background="#8BC34A"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>