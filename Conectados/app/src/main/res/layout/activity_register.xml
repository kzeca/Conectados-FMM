<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Conta"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"/>

    <EditText
        android:id="@+id/activity_register_et_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Insira seu email"
        android:layout_marginTop="60dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/activity_register_et_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Insira sua senha"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/activity_register_et_confirmar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Confirme sua senha"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/activity_login_et_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Insira seu nome"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/activity_register_bt_create"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="24dp"
        android:textColor="#fff"
        android:background="#8BC34A"
        android:text="Criar conta"/>
    <Button
        android:id="@+id/activity_register_bt_back"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:text="Voltar"/>


</LinearLayout>