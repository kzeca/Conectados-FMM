<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Recuperar senha"
        android:textSize="32dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/activity_forgot_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/input_border"
        android:hint="Insira o email para recuperação"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp" />

    <Button
        android:id="@+id/activity_forgot_bt_enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_border"
        android:text="Enviar email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/activity_forgot_bt_voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="90dp"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bt_border"
        android:backgroundTint="#3F51B5"
        android:text="Voltar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff" />

</LinearLayout>